<div class="text-center p-2">
	<h1>Mantenimiento de Equipos</h1>
</div>

@*Inicio del formulario*@

<form asp-action="crearRegistro">
	<div class="form-group">
		@*Nombre y Descripcion*@
		<div class="row mb-4">
			<div class="col-sm-2">
				@Html.Label("lblNombre", "Nombre")
			</div>
			<div class="col-sm-4">
				@Html.TextBox("nombre","", new {@class="form-control", placeHolder="Ingrese su nombre"})
			</div>

			<div class="col-sm-2">
				@Html.Label("lblDescripcion", "Descripcion")
			</div>
			<div class="col-sm-4">
				@Html.TextArea("descripcion","", new {@class="form-control", placeHolder="Ingrese la descripcion"})
			</div>
		</div>
		@*Seccion de tipo equipo*@
		<div class="row mb-4">
			<div class="col-sm-2">
				@Html.Label("lbltipoEquipo", "Tipo Equipo")
			</div>
			<div class="col-sm-4">
				@Html.DropDownList("tipo_equipo_id",ViewData["listadoTipoEquipo"] as SelectList, "--Seleccione su tipo--",new {@class="form-control"})
			</div>		
		</div>
		@*Seccion de marcas y modelo*@
		<div class="row mb-4">
			<div class="col-sm-2">
				@Html.Label("llbMarca", "Marca")
			</div>
			<div class="col-sm-4">
				@Html.DropDownList("marca_id",ViewData["listadoDeMarcas"] as SelectList,"--Seleccione la marca--", new {@class="form-control", placeHolder="Ingrese su nombre"})
			</div>

			<div class="col-sm-2">
				@Html.Label("lblModelo", "Modelo")
			</div>
			<div class="col-sm-4">
				@Html.TextBox("modelo","", new {@class="form-control", placeHolder="Ingrese su modelo"})
			</div>
		</div>
		@*año compra y costo*@
		<div class="row mb-4">

			<div class="col-sm-2">
				@Html.Label("lblAnioCompra", "Año de compra")
			</div>
			<div class="col-sm-4">
				@Html.TextBox("anio_compra","", new {@class="form-control", placeHolder="Ingrese el año"})
			</div>
			<div class="col-sm-2">
				@Html.Label("lblCosto", "Costo")
			</div>
			<div class="col-sm-4">
				@Html.TextBox("costo","", new {@class="form-control", placeHolder="Ingrese su costo"})
			</div>
		</div>
		@*Vida util y estados*@
		<div class="row mb-4">
			<div class="col-sm-2">
				@Html.Label("lblvida_Util", "Vida Util")
			</div>
			<div class="col-sm-4">
				@Html.TextBox("vida_util","", new {@class="form-control", placeHolder="Ingrese su modelo"})
			</div>

			<div class="col-sm-2">
				@Html.Label("llbEstadoEquipo", "Estado del Equipo")
			</div>
			<div class="col-sm-4">
				@Html.DropDownList("estado_equipo_id",ViewData["listadoEstadoEquipo"] as SelectList,"--Seleccione el estado--", new {@class="form-control", placeHolder="Ingrese su nombre"})
			</div> 
		</div>
		@*Boton*@
		<div class="row mb-4">
			<div class="col-sm-2">				
			</div>
			<div class="col-sm-4">			
			</div>
			<div class="col-sm-2">
				<input type="submit" class="btn btn-success text-center btn-lg"/>
			</div>
			<div class="col-sm-4">				
			</div>
		</div>

		@*Tabla dinamica*@
		<table class="table table-striped">
			<thead>
				<tr>
					<th>Nombre</th>
					<th>Descripcion</th>
					<th>Marca</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var equipo in (IEnumerable<dynamic>)ViewData["listadoDeEquipos"])
				{
					<tr>
						<td>@equipo.nombre</td>
						<td>@equipo.descripcion</td>
						<td>@equipo.marca_nombre</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</form>